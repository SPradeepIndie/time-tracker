{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/backend/api/cmd",
            "cwd": "${workspaceFolder}/backend/api",
            "showLog": true
        },
        {
            "name": "Debug Database Migration",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/backend/migrate/cmd",
            "cwd": "${workspaceFolder}/backend/migrate",
            "showLog": true
        },
        {
            "name": "Debug Current Go File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "name": "Attach to React Native (Hermes)",
            "type": "reactnativedirect",
            "request": "attach",
            "cwd": "${workspaceFolder}/mobile-app"
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack",
            "configurations": ["Debug API Server"],
            "stopAll": true
        }
    ]
}